<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pantallaprincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sofia.pingpong.pantallaprincipal">

    <Button
        android:text="Configurar"
        android:layout_width="wrap_content"
        android:id="@+id/b3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:background="@android:color/holo_blue_dark"
        android:layout_above="@+id/b4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="70dp" />

    <Button
        android:text="Multijugador"
        android:layout_width="wrap_content"
        android:id="@+id/b2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:background="@android:color/holo_blue_light"
        android:layout_above="@+id/b3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="70dp" />

    <Button
        android:text="Â¡Jugar!"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/b1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:background="@android:color/holo_blue_bright"
        android:layout_above="@+id/b2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/pingpong"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Salir"
        android:layout_width="wrap_content"
        android:id="@+id/b5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="70dp" />

    <Button
        android:text="Acerca de"
        android:layout_width="wrap_content"
        android:id="@+id/b4"
        android:layout_marginBottom="66dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:background="@color/colorPrimaryDark"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/b5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
